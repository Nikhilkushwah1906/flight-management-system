<style>
    * {
        margin: 0px;
        padding: 0px;
      }
    
      .root {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        font-family: oswald;
      }

      .planeimage{
        height: 100%;
        width: 100%;
      }
    
      .box {
        
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
      }

      .adminimg {
        display: flex;
        justify-content: center;
      }

      .admin{
        font-weight: bold;
        font-size: 26px;
        color: #ffffff;
      }

      .signin{
        font-weight: bold;
        font-size: 20px;
        color: #30336b;
      }


</style>

<html>

<head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
  </head>

  <form action="/admin/check_admin_login" method="post">

  <div class="root">
    <div class="container">
        <div class="row ">
            <div class="col-sm-6 ">
                <img src="/images/airplane.png" class="planeimage" alt="">
            </div>

            <div class="col-sm-6" >
                <div class="box" style=" background: linear-gradient(to bottom, #ff0066 0%, #ff9999 100%); border-radius:5%">

                  <div class="adminimg" style="margin-top: 20px;">
                    <img src="/images/login.png" alt="" width="20%">
                  </div>

                  <div class="admin">
                    ADMINISTRATOR
                  </div>

                  <div class="signin" style="margin-top: 20px;">
                    sign In
                  </div>

                  <div style="width: 70%; margin-top: 30px;">

                  <div class="input-group flex-nowrap">
                    <input type="text" placeholder="Emailid/MobileNumber" name="emailid" class="form-control">
                  </div>

                  <div style="margin-top:25px" class="input-group flex-nowrap"></div>
                    <input type="password" placeholder="Password" name="password" class="form-control">
                  </div>

                  <div style="margin-top:40px; margin-bottom:40px; width:70%">
                  <button type="submit" style="width: 100%;" class="btn btn-primary btn-lg">Login</button> 
                  </div>

                  <div><%=message %></div>
                   
                  </div>
                </div>
            </div>
                
            </div>
        </div>
    </div>
  </div>
</form>
</html>