<style>
    * {
      margin: 0px;
      padding: 0px;
    }
  
    .root {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 90%;
      height: 62%;
      font-family: oswald;
    }
  
    .box {
      border: 0.5px solid gray;
      border-radius: 10px;
      background-color: whitesmoke;
      width: 900px;
      height: 420;
    }
  
    .heading {
      padding-top: 2px;
      margin: 4px;
      display: flex;
      justify-content: center;
      flex-direction: row;
      align-items: center;
    }
  
    .headingStyle {
      font-size: 24px;
      font-weight: 800px;
      color: #d63031;
      margin-left: 15px;
    }
  
    .formdiv {
      margin-top: 10px;
      width: 100%;
      height: 100%;
    }
  
    .centeralign {
      display: flex;
      justify-content: center;
      align-items: center;
    }
  </style>
  <html>
    <head>
      <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
        crossorigin="anonymous"
      />
      <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"
      ></script>
  
      <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
      <script src="/javascripts/project.js"></script>
  
      <link rel="preconnect" href="https://fonts.googleapis.com" />
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
      <link
        href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet"
      />
    </head>
    <form action="/flight/edit_delete_flight" method="post">
      <input type="hidden" value="<%=data.flightid%>" name="flightid">
    <div class="root">
      <div class="box">
        <div class="heading">
          <img src="/images/logo.webp" alt="logo" width="60px" height="50px" />
          <div class="headingStyle">Edit/Delete Fight</div>
        </div>
        <div class="container formdiv">
          <div class="row" style="margin-bottom: 7px">
            <div class="col-sm-3">
              <input
                type="text"
                value="<%=data.flightname%>"
                name="flightname"
                class="form-control"
                placeholder="Flight Name"
              />
            </div>
            <div class="col-sm-3">
              <input
                type="text"
                value="<%=data.companyname%>"
                name="companyname"
                class="form-control"
                placeholder="Company Name"
              />
            </div>
            <div class="col-sm-3">
              <input
                type="text"
                value="<%=data.planetype%>"
                name="planetype"
                class="form-control"
                placeholder="Plane Type"
              />
            </div>
            <div class="col-sm-3">
              <input
                type="text"
                value="<%=data.seats%>"
                name="totalseats"
                class="form-control"
                placeholder="Total Seats"
              />
            </div>
          </div>
          <div class="row">
            <div class="col-sm-3">
              <select class="form-select" id="flightsource" name="source">
                <option selected value="<%=data.source_city%>"><%=data.sourcecity%></option>
              </select>
            </div>
            <div class="col-sm-3">
              <select class="form-select" id="terminalsource" name="sourceterminal">
                <option selected value="<%=data.source_terminal%>"><%=data.sourceterminal%></option>
              </select>
            </div>
            <div class="col-sm-3">
              <select class="form-select" id="flightdestination" name="destination">
                <option selected value="<%=data.destination_city%>"><%=data.destinationcity%></option>
              </select>
            </div>
            <div class="col-sm-3">
              <select class="form-select" id="terminaldestination" name="destinationterminal">
                <option selected value="<%=data.destination_terminal%>"><%=data.destinationterminal%></option>
              </select>
            </div>
          </div>
          <div class="row" style="margin-bottom: 7px">
            <div class="col-sm-12">
              <hr style="color: #d63031; size: 10px" />
            </div>
          </div>
          <div class="row" style="margin-bottom: 7px">
            <div class="col-sm-4">
              <label class="form-label">Arrival Time</label>
              <input type="time" value="<%=data.arrivaltime%>" name="arrivaltime" class="form-control" />
            </div>
            <div class="col-sm-4">
              <label class="form-label">Departure Time</label>
              <input type="time" value="<%=data.departuretime%>" name="departuretime" class="form-control" />
            </div>
            <div class="col-sm-4">
              <label class="form-label">Fare</label>
              <input
                type="text"
                value="<%=data.fare%>"
                name="fare"
                class="form-control"
                placeholder="Rs"
              />
            </div>
          </div>
  
          <div class="row" style="margin-bottom: 7px">
            <div class="col-sm-12">
              <div>Days</div>
              <% var days=data.days.split(",") %>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  <%=days.includes('Daily')?'checked':''%>
                  type="checkbox"
                  name="days"
                  value="Daily"
                />Daily
              </div>
              <div class="form-check form-check-inline">
                <input
                  <%=days.includes('Monday')?'checked':''%>
                  class="form-check-input"
                  type="checkbox"
                  name="days"
                  value="Monday"
                />Monday
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  <%=days.includes('Tuesday')?'checked':''%>
                  type="checkbox"
                  name="days"
                  value="Tuesday"
                />Tuesday
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  <%=days.includes('Wednesday')?'checked':''%>
                  type="checkbox"
                  name="days"
                  value="Wednesday"
                />Wednesday
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  <%=days.includes('Thursday')?'checked':''%>
                  type="checkbox"
                  name="days"
                  value="Thursday"
                />Thursday
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  <%=days.includes('Friday')?'checked':''%>
                  type="checkbox"
                  name="days"
                  value="Friday"
                />Friday
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  <%=days.includes('Saturday')?'checked':''%>
                  type="checkbox"
                  name="days"
                  value="Saturday"
                />Saturday
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  <%=days.includes('Sunday')?'checked':''%>
                  type="checkbox"
                  name="days"
                  value="Sunday"
                />Sunday
              </div>
            </div>
          </div>
  
          <div class="row" style="margin-bottom: 7px">
            <div class="col-sm-6 centeralign">
              <button type="submit" name="btn" value="Edit" class="btn btn-primary">Edit</button>
            </div>
            <div class="col-sm-6 centeralign">
              <button type="submit" name="btn" value="Delete" class="btn btn-primary">Delete</button>
            </div>
          </div> 
           
  
        </div>
      </div>
    </div>
    </form>
  </html>
  