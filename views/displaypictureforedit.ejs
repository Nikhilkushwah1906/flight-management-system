<style>
    * {
        margin: 0px;
        padding: 0px;
      }
    
      .root {
        
        display: flex;
        justify-content: center;
        align-items: center;
        width: 90%;
        height: 62%;
        font-family: oswald;
      }
    
      .box {
        border: 0.5px solid gray;
        border-radius: 10px;
        background-color: whitesmoke;
        width: 700px;
        height: 420px;
      }
    
      .heading {
        padding-top: 2px;
        margin: 4px;
        display: flex;
        justify-content: center;
        flex-direction: row;
        align-items: center;
        margin-bottom: 15px;
      }
    
      .headingStyle {
        font-size: 24px;
        font-weight: 800px;
        color: #d63031;
        margin-left: 15px;
      }

      .cente {
        display: flex;
        justify-content: space-evenly;
        flex-direction: row;
        align-items: center;
        margin-bottom: 20px;
      }

      .color{
        color: #d63031;
      }
</style>

<html>
    <head>
        <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="/javascripts/project.js"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    </head>

    <body>
        <form action="/flight/edit_flight_picture" method="post" enctype="multipart/form-data">
            <input type="hidden" value="<%=data.flightid%>" name="flightid">
        <div class="root">
            <div class="box">
              <div class="heading">
                <img src="/images/logo.webp" alt="logo" width="140px" height="70px" />
                <div class="headingStyle">Edit Flight Picture</div>
              </div>
              <hr color="red" size="5px">
              <div class="cente">
                <div><h5>Company Name :</h5></div>
                <div><h4 class="color"><%=data.companyname %></h4></div>
              </div>
              <div class="cente">
                <div><img src="/images/<%=data.companylogo %>" alt="Logo" width="200" height="70"></div>
                <div><img src="/images/plane.png" id="cpic" alt="Selected Logo" width="200" height="70"></div>
              </div>
              <div class="cente" style="margin-top: 50px;">
                <div><h5>Select New Picture You Want To Upload:</h5></div>
                <div><input type="file" onchange="showPicture2()" id="clogo" name="clogo" required></div>
              </div>
              <div class="cente">
                <input type="submit" value="Upload" style="margin-top: 30px;">
              </div>
            </div>
        </div>    
    </form>
    </body>
</html>