<style>
    * {
        margin: 0px;
        padding: 0px;
      }
    
      .root {
        display: flex;
        flex-direction: column;
        width: 100%;
        height: 100%;
        font-family: oswald;
      }

      .box {
        background-color: cadetblue;
        width: 100%;
        height: 10%;
        display: flex;
        align-items: center;
      }

    .ticket {
        width: 50px;
        margin-left: 15px;
    }

    .txt {
        color: aliceblue;
        font-size: 24px;
        font-weight: bolder;
        margin-left: 10px;
    }

    .checkout {
        width: 50px;
        margin-left: auto;
        margin-right: 15px;
    }

    .sidebar {
        background-color: #d1d8e0;
        width: 200px;
        height: 500px;
        margin: 20px;
        border-radius: 4%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .img {
        width: 140px;
        height: 140px;
        margin-top: 10px;
        border-radius: 80px;
    }

    .name {
        font-size: 18px;
        font-weight: 700;
        margin-top: 5px;
    }

    .number {
        margin-top: 2px; 
        font-size: 14px; 
        font-weight: 700;
    }

    .email {
        margin-top: 2px; 
        font-size: 12px; 
        font-weight: 700;
    }

    .add {
        margin: 3px;
        margin-top: 15px; 
        font-size: 14px; 
        font-weight: 700;
    }

    .all {
        margin: 3px; 
        font-size: 14px; 
        font-weight: 700;
    }

    .edit {
        margin: 3px; 
        font-size: 14px; 
        font-weight: 700;
    }

    .delete {
        margin: 3px; 
        font-size: 14px; 
        font-weight: 700;
    }

    .delete:hover {
        color: #fc5c65;
    }

    .edit:hover {
        color: #fc5c65;
    }


    .all:hover {
        color: #fc5c65;
    }


    .add:hover {
        color: #fc5c65;
    }

    a:link {
        color: green;
        background-color: transparent;
        text-decoration: none;
      }

      a:hover {
        color: red;
        background-color: transparent;
        text-decoration: underline;
      }

    a:active {
        color: yellow;
        background-color: transparent;
        text-decoration: underline;
      }


</style>

<html>

<head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
  </head>

  <div class="root">
    <div  class="box">
        <img src="/images/ticketflight.png" alt="" class="ticket">
        <div class="txt">
            Flight Management
        </div>
        <img src="/images/checkout.png" alt="" class="checkout">
    </div>
     
    <div class="row ">
            <div class="col-sm-2 ">
                <div class="sidebar">
                    <div>
                        <img src="/images/<%=data.picture %>" alt="" class="img">
                    </div>
                    <div class="name">
                        <%=data.adminname %>
                    </div>
                    <div class="number">
                        <%=data.mobileno %>
                    </div>
                    <div class="email">
                        <%=data.emailid %>
                    </div>
                    <div class="add">
                       <a target="mw" href="/flight/flight_interface">Add Flight</a> 
                    </div>
                    <div class="all">
                        <a target="mw" href="/flight/display_all_flights">All Flight</a> 
                    </div>
                    <div class="edit">
                        <a target="mw" href="/flight/display_all_flights">Edit Flight</a> 
                    </div>
                    <div class="delete">
                        <a href="/admin/logout">Logout</a>
                    </div>
                </div> 
            </div>

            <data class="col-sm-10">
                <iframe name="mw" width="1100" height="750" frameborder="0" style="margin-left: 80px;"></iframe>
            </data>

            
    </div>
      
  </div>
</html>