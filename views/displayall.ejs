<style>
    * {
        margin: 0px;
        padding: 0px;
      }
    
      .root {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 90%;
        height: 90%;
        font-family: oswald;
      }
    
      .box {
        border: 0.5px solid gray;
        border-radius: 10px;
        background-color: whitesmoke;
        width: 1250px;
        height: auto;
      }
    
      .heading {
        padding-top: 2px;
        margin: 4px;
        display: flex;
        justify-content: center;
        flex-direction: row;
        align-items: center;
      }
    
      .headingStyle {
        font-size: 24px;
        font-weight: 800px;
        color: #d63031;
        margin-left: 15px;
      }
</style>

<html>
    <head>
        <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="/javascripts/project.js"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    </head>

    <body>
        <div class="root">
            <div class="box">
              <div class="heading">
                <img src="/images/logo.webp" alt="logo" width="60px" height="50px" />
                <div class="headingStyle">List Of Flights</div>
              </div>
              <div>
                <table class="table">
                    <thead class="thead-dark">
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Id</th>
                        <th scope="col">Flight Name</th>
                        <th scope="col">Source</th>
                        <th scope="col">Destination</th>
                        <th scope="col">Arrival</th>
                        <th scope="col">Departure</th>
                        <th scope="col">Fare</th>
                        <th scope="col">Days</th>
                        <th scope="col">Logo</th>
                        <th scope="col">Update</th>
                      </tr>
                    </thead>

                    <tbody>
                        <% data.map((item,i)=>{ %>
                        <tr scope="row">
                            <td><%=i+1 %></td>
                            <td><%=item.flightid %> /<br> <%=item.flightname %></td>
                            <td><%=item.companyname %> /<br> <%=item.seats %>/ <br> <%=item.planetype %></td>
                            <td><%=item.sourcecity %> /<br> <%=item.sourceterminal %></td>
                            <td><%=item.destinationcity %> /<br> <%=item.destinationterminal %></td>
                            <td><%=item.arrivaltime %></td>
                            <td><%=item.departuretime %></td>
                            <td><%=item.fare %></td>
                            <td><%=item.days %></td>
                            <td><a href="/flight/display_picture_for_edit?flightdata=<%=JSON.stringify(item) %>" style="text-decoration: none;"><img src="/images/<%=item.companylogo %>" alt="Flight_Logo" width="100px" height="70"></a></td>
                            <td><a href="/flight/display_for_edit?flightid=<%=item.flightid %>" style="text-decoration: none;">Edit/Delete</a></td>
                        </tr>
                        <% }) %>
                    </tbody>

                  </table>
              </div>
            </div>
        </div>    
    </body>
</html>