<style>
  * {
    margin: 0px;
    padding: 0px;
  }

  .root {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 90%;
    height: 75%;
    font-family: oswald;
  }

  .box {
    border: 0.5px solid gray;
    border-radius: 10px;
    background-color: whitesmoke;
    width: 800px;
    height: 500px;
  }

  .heading {
    padding-top: 2px;
    margin: 4px;
    display: flex;
    justify-content: center;
    flex-direction: row;
    align-items: center;
  }

  .headingStyle {
    font-size: 24px;
    font-weight: 800px;
    color: #d63031;
    margin-left: 15px;
  }

  .formdiv {
    margin-top: 10px;
    width: 100%;
    height: 100%;
  }

  .centeralign {
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>
<html>
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="/javascripts/project.js"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <form action="/flight/flight_submit" method="post" enctype="multipart/form-data">
  <div class="root">
    <div class="box">
      <div class="heading">
        <img src="/images/logo.webp" alt="logo" width="60px" height="50px" />
        <div class="headingStyle">Flight Registration System</div>
      </div>
      <div class="container formdiv">
        <div class="row" style="margin-bottom: 7px">
          <div class="col-sm-3">
            <input
              type="text"
              name="flightname"
              class="form-control"
              placeholder="Flight Name"
            />
          </div>
          <div class="col-sm-3">
            <input
              type="text"
              name="companyname"
              class="form-control"
              placeholder="Company Name"
            />
          </div>
          <div class="col-sm-3">
            <input
              type="text"
              name="planetype"
              class="form-control"
              placeholder="Plane Type"
            />
          </div>
          <div class="col-sm-3">
            <input
              type="text"
              name="totalseats"
              class="form-control"
              placeholder="Total Seats"
            />
          </div>
        </div>
        <div class="row">
          <div class="col-sm-3">
            <select class="form-select" id="flightsource" name="source">
              <option selected>Flight Source</option>
            </select>
          </div>
          <div class="col-sm-3">
            <select class="form-select" id="terminalsource" name="sourceterminal">
              <option selected>Source Terminal</option>
            </select>
          </div>
          <div class="col-sm-3">
            <select class="form-select" id="flightdestination" name="destination">
              <option selected>Flight Destination</option>
            </select>
          </div>
          <div class="col-sm-3">
            <select class="form-select" id="terminaldestination" name="destinationterminal">
              <option selected>Destination Terminal</option>
            </select>
          </div>
        </div>
        <div class="row" style="margin-bottom: 7px">
          <div class="col-sm-12">
            <hr style="color: #d63031; size: 10px" />
          </div>
        </div>
        <div class="row" style="margin-bottom: 7px">
          <div class="col-sm-4">
            <label class="form-label">Arrival Time</label>
            <input type="time" name="arrivaltime" class="form-control" />
          </div>
          <div class="col-sm-4">
            <label class="form-label">Departure Time</label>
            <input type="time" name="departuretime" class="form-control" />
          </div>
          <div class="col-sm-4">
            <label class="form-label">Fare</label>
            <input
              type="text"
              name="fare"
              class="form-control"
              placeholder="Rs"
            />
          </div>
        </div>

        <div class="row" style="margin-bottom: 7px">
          <div class="col-sm-12">
            <div>Days</div>
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="checkbox"
                name="days"
                value="Daily"
              />Daily
            </div>
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="checkbox"
                name="days"
                value="Monday"
              />Monday
            </div>
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="checkbox"
                name="days"
                value="Tuesday"
              />Tuesday
            </div>
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="checkbox"
                name="days"
                value="Wednesday"
              />Wednesday
            </div>
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="checkbox"
                name="days"
                value="Thursday"
              />Thursday
            </div>
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="checkbox"
                name="days"
                value="Friday"
              />Friday
            </div>
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="checkbox"
                name="days"
                value="Saturday"
              />Saturday
            </div>
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="checkbox"
                name="days"
                value="Sunday"
              />Sunday
            </div>
          </div>
        </div>

        <div class="row" style="margin-bottom: 7px">
          <div class="col-sm-6">
            <label for="formFile" class="form-label">Upload Company Logo</label>
            <input
              class="form-control"
              type="file"
              name="clogo"
              id="clogo"
              onchange="showPicture()"
            />
          </div>
          <div
            class="col-sm-6 centeralign"
          >
            <img
              src="/images/plane.png"
              alt="PLane"
              id="cpic"
              style="height: 70px; width: 70px; border-radius :10px "
            />
          </div>
        </div>
        <div class="row" style="margin-bottom: 7px">
          <div class="col-sm-6 centeralign">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
          <div class="col-sm-6 centeralign">
            <button type="reset" class="btn btn-primary">Reset</button>
          </div>
        </div> 
        
        <div class="row" style="margin-bottom: 7px">
          <div class="col-sm-12 centeralign">
            <%=Message %>
          </div>
        </div>     

      </div>
    </div>
  </div>
  </form>
</html>
